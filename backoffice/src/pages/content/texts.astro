---
import Layout from '../../layouts/Layout.astro';
import { getCategoriesWithCounts, getTextResponses } from '../../lib/db';

const env = (Astro.locals as any).runtime?.env;
const url = new URL(Astro.request.url);
const categoryId = Number(url.searchParams.get('category')) || 0;
const page = Number(url.searchParams.get('page')) || 1;

let categories: any[] = [];
let items: any[] = [];
let total = 0;
let selectedCategory: any = null;

if (env?.DB) {
  const catResult = await getCategoriesWithCounts(env.DB, 'text');
  categories = catResult.results ?? [];
  if (categoryId) {
    selectedCategory = categories.find((c: any) => c.id === categoryId);
    const result = await getTextResponses(env.DB, categoryId, page);
    items = result.items as any[];
    total = result.total;
  } else if (categories.length > 0) {
    return Astro.redirect(`/content/texts?category=${categories[0].id}`);
  }
}

const limit = 20;
const totalPages = Math.ceil(total / limit);
const startIndex = (page - 1) * limit;

function formatDate(dateStr: string) {
  try {
    const d = new Date(dateStr + 'Z');
    return d.toLocaleDateString('it-IT', { day: 'numeric', month: 'short', year: 'numeric' });
  } catch { return dateStr; }
}
---

<Layout title="Testi">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Gestione Testi</h1>
      <p class="text-gray-500 dark:text-gray-400 mt-1">Frasi per insulti, minacce, bestemmie, nonno e saluti</p>
    </div>

    <div class="flex gap-6 min-h-[600px]">
      <!-- Sidebar categorie -->
      <div class="w-56 flex-shrink-0">
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-100 dark:border-gray-800 shadow-sm sticky top-6">
          <div class="p-3 border-b border-gray-100 dark:border-gray-800">
            <input
              type="text"
              id="catSearch"
              placeholder="Cerca categoria..."
              class="w-full px-3 py-2 text-sm bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-primary-500/40 outline-none"
            />
          </div>
          <nav class="p-2 max-h-[520px] overflow-y-auto" id="catList">
            {categories.map((cat: any) => (
              <a
                href={`/content/texts?category=${cat.id}`}
                data-cat-name={cat.name.toLowerCase()}
                class={`flex items-center justify-between px-3 py-2 rounded-xl text-sm transition-colors ${
                  cat.id === categoryId
                    ? 'bg-primary-50 dark:bg-primary-950 text-primary-700 dark:text-primary-400 font-medium'
                    : 'text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800'
                }`}
              >
                <span class="truncate">{cat.name}</span>
                <span class={`text-xs tabular-nums ml-2 flex-shrink-0 ${
                  cat.id === categoryId
                    ? 'text-primary-500 dark:text-primary-400'
                    : 'text-gray-400 dark:text-gray-500'
                }`}>{cat.item_count}</span>
              </a>
            ))}
          </nav>
        </div>
      </div>

      <!-- Contenuto principale -->
      <div class="flex-1 min-w-0">
        {selectedCategory ? (
          <div class="space-y-4">
            <!-- Header categoria -->
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white">{selectedCategory.name}</h2>
                <p class="text-sm text-gray-500 dark:text-gray-400">{total} {total === 1 ? 'frase' : 'frasi'}</p>
              </div>
            </div>

            <!-- Form aggiungi -->
            <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-100 dark:border-gray-800 shadow-sm p-4">
              <form id="addForm" class="flex gap-3">
                <input type="hidden" name="category_id" value={categoryId} />
                <input
                  type="text"
                  name="content"
                  placeholder="Nuova frase... (usa {name} come placeholder per il nome)"
                  class="flex-1 input-field"
                />
                <button type="submit" class="btn-primary whitespace-nowrap">
                  Aggiungi
                </button>
              </form>
            </div>

            <!-- Lista frasi -->
            <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-100 dark:border-gray-800 shadow-sm overflow-hidden">
              {items.length > 0 ? (
                <div class="divide-y divide-gray-100 dark:divide-gray-800">
                  {items.map((item: any, i: number) => (
                    <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors group">
                      <div class="flex items-start gap-3">
                        <span class="text-xs text-gray-400 dark:text-gray-500 tabular-nums pt-0.5 w-6 text-right flex-shrink-0">{startIndex + i + 1}.</span>
                        <div class="flex-1 min-w-0">
                          <p class="text-sm text-gray-900 dark:text-white leading-relaxed">{item.content}</p>
                          <p class="text-xs text-gray-400 dark:text-gray-500 mt-1.5">
                            ID: {item.id} &middot; {formatDate(item.created_at)}
                          </p>
                        </div>
                        <button
                          data-delete={item.id}
                          class="text-xs px-2.5 py-1 rounded-lg text-red-500 dark:text-red-400 bg-red-50 dark:bg-red-950/50 hover:bg-red-100 dark:hover:bg-red-900/40 transition-colors opacity-0 group-hover:opacity-100 flex-shrink-0"
                        >
                          Elimina
                        </button>
                      </div>
                    </div>
                  ))}
                </div>
              ) : (
                <div class="p-12 text-center">
                  <div class="text-4xl mb-3">üìù</div>
                  <p class="text-gray-500 dark:text-gray-400 font-medium">Nessuna frase in questa categoria</p>
                  <p class="text-gray-400 dark:text-gray-500 text-sm mt-1">Aggiungine una usando il form qui sopra</p>
                </div>
              )}

              {totalPages > 1 && (
                <div class="p-4 border-t border-gray-100 dark:border-gray-800 flex items-center justify-between">
                  <span class="text-gray-500 dark:text-gray-400 text-sm">{total} elementi</span>
                  <div class="flex items-center gap-2">
                    {page > 1 && (
                      <a href={`/content/texts?category=${categoryId}&page=${page - 1}`} class="px-3 py-1.5 text-sm bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                        &larr; Prec
                      </a>
                    )}
                    <span class="px-3 py-1.5 text-sm text-gray-500 dark:text-gray-400 tabular-nums">{page}/{totalPages}</span>
                    {page < totalPages && (
                      <a href={`/content/texts?category=${categoryId}&page=${page + 1}`} class="px-3 py-1.5 text-sm bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                        Succ &rarr;
                      </a>
                    )}
                  </div>
                </div>
              )}
            </div>
          </div>
        ) : (
          <div class="flex items-center justify-center h-64">
            <p class="text-gray-400 dark:text-gray-500">Seleziona una categoria dalla sidebar</p>
          </div>
        )}
      </div>
    </div>
  </div>

  <script define:vars={{ categoryId }}>
    // Ricerca categorie
    document.getElementById('catSearch')?.addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase();
      document.querySelectorAll('#catList a').forEach(el => {
        const name = el.getAttribute('data-cat-name') || '';
        el.style.display = name.includes(query) ? '' : 'none';
      });
    });

    // Aggiungi frase
    document.getElementById('addForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const content = form.content.value.trim();
      if (!content) return;
      const res = await fetch('/api/content/texts', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ category_id: categoryId, content }),
      });
      if (res.ok) window.location.reload();
    });

    // Elimina
    document.querySelectorAll('[data-delete]').forEach(btn => {
      btn.addEventListener('click', async () => {
        const id = btn.getAttribute('data-delete');
        if (!confirm('Sei sicuro di voler eliminare questa frase?')) return;
        const res = await fetch(`/api/content/texts?id=${id}`, { method: 'DELETE' });
        if (res.ok) window.location.reload();
      });
    });
  </script>
</Layout>
