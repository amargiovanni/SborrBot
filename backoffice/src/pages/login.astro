---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login" showSidebar={false}>
  <div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-white mb-2">ðŸ¤– SborrBot</h1>
        <p class="text-gray-400">Admin Panel</p>
      </div>

      <div class="bg-gray-800 rounded-xl shadow-lg p-8 border border-gray-700">
        <form id="loginForm" class="space-y-6">
          <div>
            <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              required
              class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
              placeholder="admin"
            />
          </div>
          <div>
            <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
            />
          </div>
          <div id="error" class="hidden text-red-400 text-sm"></div>
          <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-lg transition-colors">
            Accedi
          </button>
        </form>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('loginForm') as HTMLFormElement;
    const errorEl = document.getElementById('error') as HTMLDivElement;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      errorEl.classList.add('hidden');

      const formData = new FormData(form);
      const res = await fetch('/api/auth/login', {
        method: 'POST',
        body: formData,
      });

      if (res.ok) {
        window.location.href = '/dashboard';
      } else {
        const data = await res.json();
        errorEl.textContent = data.error || 'Credenziali non valide';
        errorEl.classList.remove('hidden');
      }
    });
  </script>
</Layout>
