---
import Layout from '../layouts/Layout.astro';
import { getCommandLogs } from '../lib/db';

const env = (Astro.locals as any).runtime?.env;
const url = new URL(Astro.request.url);
const page = Number(url.searchParams.get('page')) || 1;
const filterCommand = url.searchParams.get('command') || '';
const filterChatId = url.searchParams.get('chatId') || '';

let logs: any[] = [];
let total = 0;

if (env?.DB) {
  const result = await getCommandLogs(env.DB, page, 50, {
    command: filterCommand || undefined,
    chatId: filterChatId || undefined,
  });
  logs = result.items as any[];
  total = result.total;
}

const totalPages = Math.ceil(total / 50);
---

<Layout title="Log">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-white">üìã Log Comandi</h1>
      <p class="text-gray-400 mt-1">Storico di tutti i comandi eseguiti</p>
    </div>

    <!-- Filters -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 p-4">
      <form class="flex gap-3 flex-wrap" method="GET">
        <input
          type="text"
          name="command"
          value={filterCommand}
          placeholder="Filtra per comando..."
          class="px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 outline-none"
        />
        <input
          type="text"
          name="chatId"
          value={filterChatId}
          placeholder="Chat ID..."
          class="px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 outline-none"
        />
        <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg transition-colors">
          Filtra
        </button>
        {(filterCommand || filterChatId) && (
          <a href="/logs" class="bg-gray-700 hover:bg-gray-600 text-gray-300 px-4 py-2 rounded-lg transition-colors">
            Reset
          </a>
        )}
      </form>
    </div>

    <!-- Logs table -->
    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-700 text-left">
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Data</th>
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Utente</th>
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Chat</th>
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Tipo</th>
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Comando</th>
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Target</th>
            <th class="px-4 py-3 text-gray-400 text-xs font-medium">Risposta</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-700">
          {logs.length > 0 ? logs.map((log: any) => (
            <tr class="hover:bg-gray-750 text-sm">
              <td class="px-4 py-2 text-gray-400 text-xs whitespace-nowrap">{log.created_at}</td>
              <td class="px-4 py-2 text-gray-300">{log.username ? `@${log.username}` : log.telegram_user_id}</td>
              <td class="px-4 py-2 text-gray-400 font-mono text-xs">{log.telegram_chat_id}</td>
              <td class="px-4 py-2">
                <span class="text-xs px-2 py-1 rounded bg-gray-700 text-gray-300">{log.command_type}</span>
              </td>
              <td class="px-4 py-2 text-white font-medium">{log.command}</td>
              <td class="px-4 py-2 text-gray-400">{log.target || '-'}</td>
              <td class="px-4 py-2 text-gray-400">{log.response_type || '-'}</td>
            </tr>
          )) : (
            <tr>
              <td colspan="7" class="px-4 py-8 text-center text-gray-500">
                Nessun log trovato
              </td>
            </tr>
          )}
        </tbody>
      </table>

      {totalPages > 1 && (
        <div class="p-4 border-t border-gray-700 flex items-center justify-between">
          <span class="text-gray-400 text-sm">{total} log totali</span>
          <div class="flex gap-2">
            {page > 1 && (
              <a href={`/logs?page=${page - 1}&command=${filterCommand}&chatId=${filterChatId}`} class="px-3 py-1 bg-gray-700 text-gray-300 rounded hover:bg-gray-600">‚Üê Prec</a>
            )}
            <span class="px-3 py-1 text-gray-400">{page}/{totalPages}</span>
            {page < totalPages && (
              <a href={`/logs?page=${page + 1}&command=${filterCommand}&chatId=${filterChatId}`} class="px-3 py-1 bg-gray-700 text-gray-300 rounded hover:bg-gray-600">Succ ‚Üí</a>
            )}
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>
